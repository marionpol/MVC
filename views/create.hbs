<h1>Create Article</h1>

<form method="post" action="/article/create">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Article Name">

    <label for="slug">Slug</label>
    <input type="text" name="slug" id="slug" placeholder="Article Slug">

    <label for="image">Image</label>
    <input type="text" name="image" id="image" placeholder="Article image">

    <label for="body">Body</label>  

    <textarea name="body" id="body" placeholder="Article  
    body"></textarea>

    <button>Publish</button>
</form>



